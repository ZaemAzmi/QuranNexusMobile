<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.QuranNexus.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/dark_green_200</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="Widget.QuranNexus.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="fabCradleRoundedCornerRadius">35dp</item>
        <item name="fabCradleMargin">14dp</item>
        <item name="fabCradleVerticalOffset">10dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnimationMode">slide</item>

        <item name="backgroundTint">@color/light_green_side_nav</item>
    </style>

    <style name="Widget.QuranNexus.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_gravity">bottom</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <style name="Widget.QuranNexus.CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/dark_green_200</item>
        <item name="tabSelectedTextColor">@color/dark_green_200</item>
        <item name="tabTextColor">@color/black</item>
        <item name="background">@color/transparent</item>
    </style>

    <!-- res/values/themes.xml -->

</resources>