    <style name="TextAppearance.ArabicSurahName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/uthmanic_scripts_hafs</item>
    </style>

    <style name="TextAppearance.AyatNumber">
